<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.recipeappfirebase.FragmentHome"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentAdd"
            app:destination="@id/fragmentAdd" />
    </fragment>
    <fragment
        android:id="@+id/fragmentAdd"
        android:name="com.example.recipeappfirebase.FragmentAdd"
        android:label="fragment_update"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_fragmentAdd_to_fragmentHome"
            app:destination="@id/fragmentHome" />
    </fragment>
</navigation>